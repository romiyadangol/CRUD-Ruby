<%= stylesheet_link_tag 'index' %>

<div class="card-container">
  <% @articles.each do |article| %>
    <div class="card">
      <div class="card-body">
        <h3><%= link_to article.title, article %></h3>
        <p><%= article.body %></p>
      </div>
    </div>
    <hr class="hr">
  <% end %>
</div>


